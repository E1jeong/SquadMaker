<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_settings_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_settings_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/image_back" />

        <TextView
            android:id="@+id/tv_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정"
            android:textSize="36sp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_program_information"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="프로그램 정보"
        android:textSize="15sp"
        android:textColor="#535353"
        android:gravity="bottom"
        app:layout_constraintTop_toBottomOf="@id/rl_settings_bar"
        android:background="#CECECE"/>

    <RelativeLayout
        android:id="@+id/rl_settings_menu_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tv_program_information">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="광고 및 제휴"
            android:textSize="20sp"
            android:textColor="#535353"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_right"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_settings_menu_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/rl_settings_menu_first">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:textSize="20sp"
            android:textColor="#535353"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_right"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_settings_menu_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/rl_settings_menu_second">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인스타그램"
            android:textSize="20sp"
            android:textColor="#535353"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_right"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>